<div class="books_wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-2 search-index-form">
        <h5 class="index-search-title">書籍検索</h5>
        <%= search_form_for @q, url: others_finished_books_path do |f| %>
          <div class="form-group index-search">
            <%= f.label :title_or_author_cont, 'キーワード', class: 'bmd-label-floating' %>
            <%= f.search_field :title_or_author_cont, class: 'form-control' %>
          </div>

          <div class="form-group select-form">
            <%= f.label :status_eq, 'ステータス', class: 'bmd-label-floating' %>
            <%= f.select :status_eq, FinishedBook.statuses.map {|k, v| [I18n.t("enums.finished_book.status.#{k}"), v]}, { include_blank: true, selected: '' }, {class: 'custom-select'} %>
          </div>

          <%= f.submit '検索', class: 'btn btn-primary' %>
        <% end %>
        <%= link_to '検索結果を戻す', others_finished_books_path, class: 'btn btn-warning' %>
      </div>

      <div class="col-sm-10 index-table">
        <div class="index-table-content">
          <h2 class="unread-top">他ユーザーの読破書籍</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width: 25%">書籍名</th>
                  <th style="width: 20%">著者名</th>
                  <th style="width: 13%">ユーザー名</th>
                  <th style="width: 20%">メッセージを送る</th>
                  <th style="width: 22%">お気に入り</th>
                </tr>
              </thead>
              <tbody>
                <% @finished_books.each do |book| %>
                  <tr>
                    <td><%= link_to book.title, finished_book_path(book), class: 'book-info' %></td>
                    <td><%= book.author %></td>
                    <td><%= link_to book.user.name, user_path(book.user) %></td>
                    <td><%= link_to 'メッセージを送る', conversations_path(sender_id: current_user.id, recipient_id: book.user.id), method: :post, class: 'btn btn-primary' %></td>
                    <% if current_user.concerned?(book) %>
                      <td><%= link_to '気になる書籍から外す', concern_book_path(current_user.concern_books.find_by(finished_book_id: book.id)), method: :delete, class: 'btn btn-warning' %></td>
                    <% else %>
                      <td><%= link_to '気になる書籍に追加する', concern_books_path(finished_book_id: book.id), method: :post, class: 'btn btn-success' %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

        <%= paginate @finished_books %>
        </div>
      </div>
    </div>
  </div>
</div>
