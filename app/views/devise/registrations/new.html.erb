<%= render "devise/shared/error_messages", resource: resource %>
<div class="card devise-card new-devise-card">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: 'bmd-label-floating' %><br />
      <%= f.text_field :name, class: 'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'bmd-label-floating' %><br />
      <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :avater, class: 'bmd-label-floating' %><br />
      <%= f.file_field :avater, class: 'form-control-file'  %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'bmd-label-floating' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上必要です)</em>
      <% end %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'bmd-label-floating' %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: 'btn btn-primary btn-raised' %>
    </div>
  <% end %>
  <div class="devise-share">
    <%= render "devise/shared/links" %>
  </div>
  <div class="test-user">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.hidden_field :email, value: 'test@example.com' %>
      <%= f.hidden_field :password, value: 'hogefuga' %>
      <%= f.submit "テストユーザーとしてログイン", role: 'button' , class: 'btn btn-seccondary btn-raised btn-lg' %>
    <% end %>
  </div>
</div>

